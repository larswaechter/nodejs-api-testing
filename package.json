{
  "name": "nodejs-api-testing",
  "version": "1.0.0",
  "description": "An example app on testing Node.js REST-APIs",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "watch": "nodemon --exec \"npm run build && npm run start\" --watch src --ext ts",
    "lint": "npx eslint . --ext .ts",
    "prettier": "prettier --config ./.prettierrc --write \"./src/**/*.ts\"",
    "prettier:ci": "prettier --check ./.prettierrc \"./src/**/*.ts\"",
    "seed": "node db/index.js",
    "test": "NODE_ENV=test jest --coverage --forceExit",
    "test:ci": "NODE_ENV=test jest --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larswaechter/nodejs-api-testing.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/larswaechter/nodejs-api-testing/issues"
  },
  "homepage": "https://github.com/larswaechter/nodejs-api-testing#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/express": "^4.17.14",
    "decko": "^1.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "winston": "^3.8.2"
  }
}
